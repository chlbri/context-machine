{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "prepare": "tsdx build && yarn run prettier && yarn run eslint-fix",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "eslint": "eslint \"{src/**/*,App}.{ts,tsx}\"",
    "eslint-fix": "yarn run eslint --fix",
    "prettier": "prettier --write \"{src/**/*,App}.{ts,tsx}\"",
    "publish": "yarn publish",
    "rm": "rm node_modules -r -fo",
    "yarn": "yarn install",
    "cache_clean": "yarn cache clean"
  },
  "peerDependencies": {
    "@types/lodash": "^4.14.172",
    "@types/react": "^17.0.17",
    "@xstate/react": "^1.5.1",
    "react": "^17.0.2",
    "typescript": "^4.3.5",
    "xstate": "^4.23.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "context-machine",
  "author": "core_chlbri",
  "module": "dist/context-machine.esm.js",
  "size-limit": [
    {
      "path": "dist/context-machine.cjs.production.min.js",
      "limit": "50 KB"
    },
    {
      "path": "dist/context-machine.esm.js",
      "limit": "50 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.3",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.172",
    "@types/react": "^17.0.17",
    "@types/react-dom": "^17.0.9",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "@xstate/react": "^1.5.1",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "size-limit": "^5.0.3",
    "ts-jest": "^27.0.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5",
    "xstate": "^4.23.1",
    "yarn": "^1.22.11"
  }
}
